<!DOCTYPE html>
<html>
<head>
    <title>Discount Calculator</title>
</head>
<body>
    <h1>Discount Calculator</h1>

<script>

    let amount = 6000;

    // Declare discount variable
    let discount = 0;
    let finalAmount = 0;

    // Apply discount rules

    if (amount >= 5000) {
        discount = amount * 0.20; // 20 % 
    } 
    else if (amount >= 3000) {
        discount = amount * 0.10; // 10%
    } 
    else {
        discount = 0; // No discount
    }

    finalAmount = amount - discount;

       // display result on web browser
    document.write("Purchase Amount: Rs." + amount + "<br>");
    document.write("Discount: Rs." + discount + "<br>");
    document.write("Final Payable Amount: Rs." + finalAmount);

    // display result on consol
    consol.log("Purchase Amount: Rs." + amount);
    consol.log("Discount: Rs." + discount);
    consol.log("Final Payable Amount: Rs." + finalAmount);
</script>

</body>
</html>
