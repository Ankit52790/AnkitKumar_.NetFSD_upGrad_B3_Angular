************************css file*********************

/* Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body{
    font-family: Arial, Helvetica, sans-serif;
}

/* Layout using Flexbox */
.dashboard {
    display: flex;
    min-height: 100vh;
}
.sidebar {
    width: 250px;
    background-color: #2c3e50;
    color: white;
    padding: 20px;
}

.sidebar h2 {
    margin-bottom: 20px;
}

.sidebar ul {
    list-style: none;
}
.sidebar ul li {
    padding: 10px 0;
    cursor: pointer;
}

.sidebar ul li:hover {
    color: #1abc9c;
}

.main-content {
    flex: 1;
    padding: 20px;
    background-color: #f4f6f8;
}

.main-content h1 {
    margin-bottom: 20px;
}

/* Cards Section using Grid */
.cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
}

/* Individual Card */
.card {
    background-color: white;
    border: 1px solid #ccc;
    padding: 20px;
    border-radius: 8px;
    font-weight: bold;
}


/* Responsive Design */
/* ------------------ */

@media (max-width: 768px) {

    /* Sidebar becomes top navigation */
    .dashboard {
        flex-direction: column;
    }

    .sidebar {
        width: 100%;
        text-align: center;
    }

    .sidebar ul {
        display: flex;
        justify-content: space-around;
    }

    /* Cards stack vertically */
    .cards {
        grid-template-columns: 1fr;
    }
}
