    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding: 20px;
}
/* Blog Card */
.blog-card {
    background-color: #ffffff;
    border: 1px solid #ccc;
    border-radius: 8px;

    /* Box Model */
    padding: 15px;

    /* Flexible width */
    flex: 1 1 30%;
    box-sizing: border-box;
}

.blog-card h2 {
    margin-top: 0;
    color: #333;
}

