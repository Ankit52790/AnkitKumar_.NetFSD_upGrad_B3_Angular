<!DOCTYPE html>
<html>
<head>
    <title>Number Analysis Tool</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            text-align: center;
            padding-top: 50px;
        }

        .container {
            background: white;
            width: 350px;
            margin: auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px gray;
        }

        h1 {
            color: darkblue;
        }

        #output {
            margin-top: 20px;
            font-size: 18px;
        }
    </style>
</head>

<body>

    <div class="container">
        <h1>Number Analysis Tool</h1>
        <div id="output"></div>
    </div>

    <script>
        // Store number
        let number = 8;   // Change this value to test

        // 1️⃣ Ternary Operator (Positive/Negative)
        let sign = (number >= 0) ? "Positive" : "Negative";

        // 2️⃣ Even or Odd (if–else)
        let parity;
        if (number % 2 === 0) {
            parity = "Even";
        } else {
            parity = "Odd";
        }

        // 3️⃣ Loop from 1 to number
        let numbersList = "";
        for (let i = 1; i <= number; i++) {
            numbersList += i + " ";
        }

        // Console Output
        console.log("Number:", number);
        console.log("Sign:", sign);
        console.log("Parity:", parity);
        console.log("Numbers:", numbersList);

        // Display on Webpage
        document.getElementById("output").innerHTML =
            "Number: " + number + "<br>" +
            "Sign: " + sign + "<br>" +
            "Parity: " + parity + "<br>" +
            "Numbers from 1 to " + number + ":<br>" +
            numbersList;
    </script>

</body>
</html>
