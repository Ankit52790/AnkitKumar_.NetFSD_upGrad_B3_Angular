<body>

<div class="container" id="container">
    <h1>Enter Your Info</h1>
    <input type="text" id="nameInput" placeholder="Enter your name">
    <input type="number" id="ageInput" placeholder="Enter your age">
    <input type="text" id="cityInput" placeholder="Enter your city">
    <br>
    <button onclick="displayUserInfo()">Show User Info</button>
    <div class="user-info" id="userInfo"></div>
</div>

<script>
    function displayUserInfo() {
        // Create a local user object using input values
        var user = {
            name: document.getElementById('nameInput').value,
            age: document.getElementById('ageInput').value,
            city: document.getElementById('cityInput').value
        };

        // Get container for displaying user info
        var container = document.getElementById('userInfo');
        container.innerHTML = ""; // Clear previous content

        // Random colors for container background
        var colors = ["#FFDEE9", "#B5FFFC", "#FFFBBA", "#D4FFD4", "#E0BBE4", "#FF9AA2"];
        var randomColor = colors[Math.floor(Math.random() * colors.length)];
        document.getElementById('container').style.backgroundColor = randomColor;

        // Create and append <p> elements for each property with bounce effect
        var delay = 0;
        for (var key in user) {
            var p = document.createElement('p');
            p.textContent = key.charAt(0).toUpperCase() + key.slice(1) + ": " + user[key];
            container.appendChild(p);

            // Trigger fade-in and bounce with slight delay for each line
            (function(el, d) {
                setTimeout(function() {
                    el.style.opacity = 1;
                    el.classList.add('bounce');
                }, d);
            })(p, delay);
            
            delay += 200; // stagger effect
        }
    }
</script>

</body>
</html>
