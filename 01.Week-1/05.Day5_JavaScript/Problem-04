<body>

<div class="container">
    <h1>Student Profile Manager</h1>
    <div class="profile" id="profileDisplay"></div>
    <div style="margin-top:15px;">
        <input type="number" id="marksInput" placeholder="Enter new marks">
        <button id="updateMarksBtn">Update Marks</button>
    </div>
</div>

<script>
    // Global student object
    var student = {
        name: "Rahul Sharma",
        rollNo: "21CS101",
        marks: 85
    };

    // Function to display/update student profile
    function updateStudentProfile(studentObj) {
        var display = document.getElementById('profileDisplay');
        display.innerHTML = ""; // Clear previous content

        for (var key in studentObj) {
            var p = document.createElement('p');
            p.textContent = key.charAt(0).toUpperCase() + key.slice(1) + ": " + studentObj[key];
            display.appendChild(p);
        }
    }

    // Function to update marks and refresh profile
    function updateMarks(newMarks) {
        student.marks = newMarks;
        updateStudentProfile(student);
    }

    // Initial display
    updateStudentProfile(student);

    // Event listener for updating marks
    document.getElementById('updateMarksBtn').addEventListener('click', function() {
        var newMarks = parseInt(document.getElementById('marksInput').value);
        if (!isNaN(newMarks)) {
            updateMarks(newMarks);
            document.getElementById('marksInput').value = "";
        } else {
            alert("Please enter valid marks");
        }
    });
</script>

</body>
