            width: 350px;
            text-align: center;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        /* Student profile card */
        .profile {
            background-color: #f0f8ff;
            border-radius: 10px;
            padding: 20px;
            margin-top: 15px;
            box-shadow: 0 5px 10px rgba(0,0,0,0.1);
        }

        .profile p {
            margin: 10px 0;
            font-weight: bold;
            color: #333;
            font-size: 16px;
